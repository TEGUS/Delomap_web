{% extends "AppBundle::layout.html.twig" %}


{% block body %}

    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <h2>
                    Mon Profil
                </h2>
            </div>

            <!-- Add Fichier -->
            <div id="block-form-add-fichie" class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="body container-fluid">
                            <div class="row">
                                <div class="col-sm-10 col-sm-offset-1">
                                    {% block fos_user_content %}

                                        <div class="row" style="margin-top: 10px;">
                                            <div class="row">
                                                <div class="col-md-3">

                                                    {% block fos_user_content_menu %}
                                                        <div class="text-center" style="display: flex; flex-direction: column; align-items: center; justify-content: center;">
                                                            <img src="{{ asset('images/user.png') }}" class="img-responsive" style="border-radius: 50px; height: 200px; width: 200px;">
                                                            <h3>{{ app.user.username }}</h3>
                                                            <h5>{{ app.user.email }}</h5>
                                                        </div>

                                                        <div class="list-group">
                                                            <a href="{{ path('fos_user_profile_show') }}" class="list-group-item {% if app.request.get('_route') == 'fos_user_profile_show' %} active{% endif %}"> Mon compte </a>
                                                            <a href="{{ path('fos_user_profile_edit') }}" class="list-group-item {% if app.request.get('_route') == 'fos_user_profile_edit' %} active{% endif %}">
                                                                <i class="fa fa-edit"></i>
                                                                Modifier mon compte
                                                            </a>
                                                            <a href="{{ path('fos_user_change_password') }}" class="list-group-item {% if app.request.get('_route') == 'fos_user_change_password' %} active{% endif %}">
                                                                <i class="fa fa-lock"></i>
                                                                Changer le mot de passe
                                                            </a>
                                                        </div>

                                                        {#<div class="">#}
                                                            {#<i class="fa fa-remove"></i>#}
                                                            {#<a href="#" class="text-danger">Supprimer mon compte</a>#}
                                                        {#</div>#}

                                                    {% endblock fos_user_content_menu %}

                                                </div>
                                                <div class="col-md-9">

                                                    {% block fos_user_content_content %}

                                                    {% endblock fos_user_content_content %}

                                                </div>
                                            </div>
                                        </div>

                                    {% endblock fos_user_content %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# Add Fichier -->
        </div>
    </section>

