{% extends "@FOSUser/layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block title %}
    Ma Photo de Profil - {{ parent() }}
{% endblock %}


{% block fos_user_content_content %}

    <h3 class="page-header">Edition de la photo de profil</h3>

    <div class="row">
        <div class="col-md-12">
            {{ form_start(form) }}

            <div class="row clearfix">
                <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 ">
                    <label for="pp">{{ form_label(form.picture.docFile, 'Pseudo *') }}</label>
                    {{ form_errors(form.picture.docFile) }}
                </div>

                <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                    <div class="form-group">
                        <div class="form-line">
                            {{ form_widget(form.picture.docFile, { 'attr' : { 'class' : 'form-control'} }) }}
                        </div>
                    </div>
                </div>
            </div>
            {{ form_rest(form) }}

            <div class="form-group">
                <input type="submit" value="{{ 'profile.edit.submit'|trans }}" class="btn btn-primary"/>
            </div>

            {{ form_end(form) }}

        </div>
    </div>

{% endblock fos_user_content_content %}
