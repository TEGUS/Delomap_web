{% extends "@FOSUser/layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block title %}
    Mes Infos - {{ parent() }}
{% endblock %}


{% block fos_user_content_content %}

    <h3 class="page-header">Edition des Infos Personnels</h3>

    <div class="row">
        <div class="col-md-12">
            {{ form_start(form) }}

            <div class="row clearfix">
                <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 ">
                    <label for="name">{{ form_label(form.name, 'Nom *') }}</label>
                    {{ form_errors(form.name) }}
                </div>

                <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                    <div class="form-group">
                        <div class="form-line">
                            {{ form_widget(form.name, { 'attr' : { 'class' : 'form-control'} }) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="row clearfix">
                <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 ">
                    <label for="surname">{{ form_label(form.surname, 'Pr√©nom *') }}</label>
                    {{ form_errors(form.name) }}
                </div>

                <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                    <div class="form-group">
                        <div class="form-line">
                            {{ form_widget(form.surname, { 'attr' : { 'class' : 'form-control'} }) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="row clearfix">
                <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 ">
                    <label for="adresse">{{ form_label(form.adresse, 'Adresse ') }}</label>
                    {{ form_errors(form.adresse) }}
                </div>

                <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                    <div class="form-group">
                        <div class="form-line">
                            {{ form_widget(form.adresse, { 'attr' : { 'class' : 'form-control'} }) }}
                        </div>
                    </div>
                </div>
            </div>
            {{ form_rest(form) }}

            <div class="form-group">
                <input type="submit" value="{{ 'profile.edit.submit'|trans }}" class="btn btn-primary"/>
            </div>

            {{ form_end(form) }}

        </div>
    </div>

{% endblock fos_user_content_content %}
