{% extends "AppBundle::layout.html.twig"%}

{% block body %}
    {{ parent() }}
    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <h2>
                    TERME DE REFERENCE
                </h2>
            </div>
            <!-- Table les types de prestation -->
            <div id="block-table-terme-reference" class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2 class="col-xs-6">
                                Liste des termes de référence
                            </h2>
                            <div class="col-xs-6 right-side">
                                <button type="button" class="btn btn-primary waves-effect button-new">Nouveau</button>
                            </div>
                        </div>
                        <div class="body">
                            <div class="table-responsive">
                                <table id="table-terme-reference" class="table table-bordered table-striped table-hover dataTable js-exportable">
                                    <thead>
                                    <tr>
                                        <th>Code</th>
                                        <th>Nom du terme de référence</th>
                                        <th>Description</th>
                                        <th>Prestation Associées</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tfoot>
                                    <tr>
                                        <th>Code</th>
                                        <th>Nom du terme de référence</th>
                                        <th>Description</th>
                                        <th>Prestation Associées</th>
                                        <th>Actions</th>
                                    </tr>
                                    </tfoot>
                                    {#<tbody>#}
                                    {#<tr>#}
                                        {#<td>1</td>#}
                                        {#<td>prestation 1</td>#}
                                        {#<td>description 1</td>#}
                                        {#<td>#}
                                            {#<a href="#" class="edit" title="Modifier"><i class="fa fa-edit fa-lg fa-primary"></i></a>#}
                                            {#<span class="space-button"></span>#}
                                            {#<a href="#" class="remove" title="Supprimer"><i class="fa fa-times fa-lg fa-red"></i></a>#}
                                        {#</td>#}
                                    {#</tr>#}
                                    {#</tbody>#}
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# Table des types de prestation -->
            <!-- nouveau type de prestation -->
            <div id="block-form-terme-reference" class="row clearfix hidden">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                Nouveau terme de reférence
                            </h2>
                        </div>
                        <div class="body">
                            <form id="form-terme-reference" class="form-horizontal">
                                <input type="text" name="id" id="id_tdr" class="hidden" >
                                <div class="row clearfix">
                                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                        <label for="nom">Rechercher le type de prestation* </label>
                                    </div>
                                   <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                                        <div class="form-group">
                                            <div class="form-line">
                                    <select id="select-tdr" name="select" data-live-search="true">
                                        <option value="prestation1">Prestation 1</option>
                                        <option value="prestation2">Prestation 2</option>
                                        <option value="prestation3">Prestation 3</option>
                                    </select>
                                            </div>
                                        </div>
                                   </div>
                                </div>
                                
                                  <div class="row clearfix">
                                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                        <label for="nom">Nom de la Référence * </label>
                                    </div>
                                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                                        <div class="form-group">
                                            <div class="form-line">
                                                <input type="text" name="nom" id="nom_tdr" class="form-control nom" placeholder="Veuillez saisir le nom" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                  <div class="row clearfix">
                                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                        <label for="description">Description </label>
                                    </div>
                                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                                        <div class="form-group">
                                            <div class="form-line">
                                                <textarea name="description" id="description_tdr" cols="30" rows="5" class="form-control no-resize description" placeholder="Veuillez saisir une description" ></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                                        <button type="button" class="btn btn-primary m-t-15 waves-effect save">Enregistrer</button>
                                        <button type="button" class="btn btn-default m-t-15 waves-effect cancel">Annuler</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# nouveau type de prestation -->
        </div>
    </section>
{% endblock %}