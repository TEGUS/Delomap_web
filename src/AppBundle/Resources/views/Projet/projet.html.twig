{% extends "AppBundle::layout.html.twig"%}

{% block body %}
    {{ parent() }}
    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <h2>
                    Projets
                </h2>
            </div>
            <!-- Table des projets -->
            <div id="block-table-projet" class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2 class="col-xs-6">
                                Liste des projets
                            </h2>
                            <div class="col-xs-6 right-side">
                                <button type="button" class="btn btn-primary waves-effect button-new">Nouveau</button>
                            </div>
                        </div>
                        <div class="body">
                            <div class="table-responsive">
                                <table id="table-projet" class="table table-bordered table-striped table-hover dataTable js-exportable">
                                    <thead>
                                    <tr>
                                        <th>Nom du projet</th>
                                        <th>Date de début</th>
                                        <th>Date de fin</th>
                                        <th>Coût</th>
                                        <th>Statut</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tfoot>
                                    <tr>
                                        <th>Nom du projet</th>
                                        <th>Date de début</th>
                                        <th>Date de fin</th>
                                        <th>Coût</th>
                                        <th>Statut</th>
                                        <th>Actions</th>
                                    </tr>
                                    </tfoot>
                                    <tbody>
                                    <tr>
                                        <th>projet 1</th>
                                        <th>31-12-2017</th>
                                        <th>31-01-2018</th>
                                        <th>1 000 000</th>
                                        <th><span class="label label-success">Terminé</span></th>
                                        <th>
                                            <a href="#" class="edit" title="Modifier"><i class="fa fa-edit fa-lg fa-primary"></i></a>
                                            <span class="space-button"></span>
                                            <a href="#" class="remove" title="Supprimer"><i class="fa fa-times fa-lg fa-red"></i></a>
                                            <span class="space-button"></span>
                                            <a href="#" class="details" title="Détails"><i class="fa fa-file fa-lg fa-default"></i></a>
                                            <span class="space-button"></span>
                                            <a href="#" class="docs" title="Mise à jour des documents"><i class="fa fa-book fa-lg fa-default"></i></a>
                                        </th>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# Table des types de prestation -->
            <!-- nouveau type de prestation -->
            <div id="block-form-projet" class="row clearfix hidden">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                Nouveau projet
                            </h2>
                        </div>
                        <div class="body">
                            <form id="form-projet" class="form-horizontal">
                            <h3>Infos de base</h3>
                                <fieldset>
                                <input type="text" name="id" id="id_projet" class="hidden" >
                                <div class="row clearfix">
                                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                        <label for="nom">Nom du projet * </label>
                                    </div>
                                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                                        <div class="form-group">
                                            <div class="form-line">
                                                <input type="text" name="nom" class="form-control" placeholder="Veuillez saisir le nom" >
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                        <label for="date_deb">Date de début * </label>
                                    </div>
                                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                                        <div class="form-group">
                                            <div class="form-line">
                                                <input type="text" name="date_deb" class="datepicker form-control" placeholder="Date de début ..." >
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                        <label for="date_fin">Date de fin * </label>
                                    </div>
                                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                                        <div class="form-group">
                                            <div class="form-line">
                                                <input type="text" name="date_fin" class="datepicker form-control" placeholder="Date de fin ..." >
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                        <label for="cout">Coût du projet * </label>
                                    </div>
                                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                                        <div class="form-group">
                                            <div class="form-line">
                                                <input type="number" name="cout" class="form-control" placeholder="Coût ..." >
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                </fieldset>
                                <h3>Type de Prestation et Procédure</h3>
                                <fieldset>
                                <div class="row clearfix">
                                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                        <label for="tp">Type de prestation * </label>
                                    </div>
                                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                                        <div class="form-group">
                                            <div class="form-line">
                                                <select name="tp" class="form-control show-tick" data-live-search="true">
                                                    <option value="1">TP 1</option>
                                                    <option value="2">TP 2</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                        <label for="proc">Procédure choisie * </label>
                                    </div>
                                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                                        <div class="form-group">
                                            <div class="form-line">
                                                <select name="proc" class="form-control show-tick" data-live-search="true">
                                                    <option value="1">Proc 1</option>
                                                    <option value="2">Proc 2</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                </fieldset>
                                <h3>autres infos</h3>
                                <fieldset>
                                <div class="row clearfix">
                                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                        <label for="proc">Termes de référence </label>
                                    </div>
                                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                                        <div class="form-group tdr">
                                            <button type="button" class="btn bg-black waves-effect" data-color-name="bg-black">
                                                <i class="fa fa-plus"></i> Ajouter
                                            </button>
                                            <table class="table table-striped editable-table-projet">
                                                <thead>
                                                    <tr>
                                                        <th>Service</th>
                                                        <th>Date</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                        <label for="proc">CCTP </label>
                                    </div>
                                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                                        <div class="form-group cctp">
                                            <button type="button" class="btn bg-black waves-effect" data-color-name="bg-black">
                                                <i class="fa fa-plus"></i> Ajouter
                                            </button>
                                            <table class="table table-striped editable-table-projet">
                                                <thead>
                                                    <tr>
                                                        <th>Service</th>
                                                        <th>Date</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                </fieldset>
                                <!--div class="row clearfix">
                                    <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                                        <button type="button" class="btn btn-primary m-t-15 waves-effect save"><i class="fa fa-spinner fa-spin hidden"></i> Enregistrer</button>
                                        <button type="button" class="btn btn-default m-t-15 waves-effect cancel">Annuler</button>
                                    </div>
                                </div-->
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# nouveau type de prestation -->
        </div>
    </section>
{% endblock %}