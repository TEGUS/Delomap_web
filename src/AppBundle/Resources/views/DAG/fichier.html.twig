{% extends "AppBundle::layout.html.twig" %}

{% block body %}
    {{ parent() }}

    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <h2>
                    PANEL FICHIER
                </h2>
            </div>

            <!-- Add Fichier -->
            <div id="block-form-add-fichie" class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                Ajouter un Fichier au DAG (Document à Générer) [ {{ dag.libelle }} ]
                            </h2>
                        </div>
                        <div class="body container-fluid">
                            <div class="row">
                                <div class="col-sm-8 col-sm-offset-2">
                                    <div class="form-horizontal">
                                        {{ form_start(form) }}
                                        {{ form_errors(form) }}

                                        {#<div class="row clearfix">#}
                                            {#<div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 ">#}
                                                {#<label for="dag">{{ form_label(form.dag, 'Choose DAG *') }}</label>#}
                                            {#</div>#}

                                            {#<div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">#}
                                                {#<div class="form-group">#}
                                                    {#<div class="form-line">#}
                                                        {#{{ form_widget(form.dag, { 'attr' : { 'class' : 'form-control'} }) }}#}
                                                    {#</div>#}
                                                {#</div>#}
                                            {#</div>#}
                                        {#</div>#}

                                        <div class="row clearfix">
                                            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 ">
                                                <label for="dag">{{ form_label(form.docFile, 'Choisir Fichier *') }}</label>
                                            </div>

                                            <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        {{ form_widget(form.docFile, { 'attr' : { 'class' : 'form-control'} }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        {{ form_errors(form) }}
                                        {{ form_rest(form) }}

                                        <div class="row clearfix">
                                            <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                                                <button type="submit" class="btn btn-primary m-t-15 waves-effect save">
                                                    <i class="fa fa-spinner fa-spin hidden"></i> Enregistrer
                                                </button>
                                                <a href="{{ path('index_dags') }}" type="button" class="btn btn-default m-t-15 waves-effect cancel">
                                                    Annuler
                                                </a>
                                            </div>
                                        </div>

                                        {{ form_end(form) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# Add Fichier -->
        </div>
    </section>
{% endblock %}

