{% extends "AppBundle::layout.html.twig"%}

{% block body %}
    {{ parent() }}

    {#<iframe src="http://docs.google.com/viewer?url=http://localhost/Delomap_dev/web/uploads/git_memo_fr.pdf&embedded=true" width="600" height="780" style="border: none;"></iframe>#}

    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <h2>
                   <b> TYPES DE PRESTATION </b>
                </h2>
            </div>
            <!-- Table les types de prestation -->
            <div id="block-table-type-prestation" class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2 class="col-xs-6">
                               <b> Liste des types de Prestation</b>
                            </h2>
                            <div class="col-xs-6 right-side">
                                <button type="button" class="btn btn-primary waves-effect button-new">Nouveau</button>
                            </div>
                        </div>
                        <div class="body">
                            <div class="table-responsive">
                                <table id="table-type-prestation" class="table table-bordered table-striped table-hover dataTable js-exportable">
                                    <thead>
                                    <tr>
                                        <th>Code</th>
                                        <th>Nom de la prestation</th>
                                        <th>Description</th>
                                        <th>liste des procs</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tfoot>
                                    <tr>
                                        <th>Code</th>
                                        <th>Nom de la prestation</th>
                                        <th>Description</th>
                                        <th>liste des procs</th>
                                        <th>Actions</th>
                                    </tr>
                                    </tfoot>
                                    {#<tbody>#}
                                    {#<tr>#}
                                        {#<td>1</td>#}
                                        {#<td>prestation 1</td>#}
                                        {#<td>description 1</td>#}
                                        {#<td>#}
                                            {#<a href="#" class="edit" title="Modifier"><i class="fa fa-edit fa-lg fa-primary"></i></a>#}
                                            {#<span class="space-button"></span>#}
                                            {#<a href="#" class="remove" title="Supprimer"><i class="fa fa-times fa-lg fa-red"></i></a>#}
                                        {#</td>#}
                                    {#</tr>#}
                                    {#</tbody>#}
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# Table des types de prestation -->
            <!-- nouveau type de prestation -->
            <div id="block-form-type-prestation" class="row clearfix hidden">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                Nouveau type de prestation
                            </h2>
                        </div>
                        <div class="body">
                            <form id="form-type-prestation" class="form-horizontal">
                                <input type="text" name="id" id="id_tp" class="hidden" >
                                <div class="row clearfix">
                                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                        <label for="nom">Nom * </label>
                                    </div>
                                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                                        <div class="form-group">
                                            <div class="form-line">
                                                <input type="text" name="nom" id="nom_tp" class="form-control nom" placeholder="Veuillez saisir le nom" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                        <label for="description">Description </label>
                                    </div>
                                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                                        <div class="form-group">
                                            <div class="form-line">
                                                <textarea name="description" id="description_tp" cols="30" rows="5" class="form-control no-resize description" placeholder="Veuillez saisir une description" ></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                                        <button type="button" class="btn btn-primary m-t-15 waves-effect save"><i class="fa fa-spinner fa-spin hidden"></i> Enregistrer</button>
                                        <button type="button" class="btn btn-default m-t-15 waves-effect cancel">Annuler</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# nouveau type de prestation -->
            
            <!-- Ajout procedure -->
            <div class="modal fade" id="modal-tp-proc" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Liste des proc√©dures</h4>
                        </div>
                        <div class="modal-body">
                        <div>
                            <select id="list_procs" data-live-search="true">
                            </select>
                            <button type="button" class="btn btn-link waves-effect btn-primary add"><i class="fa fa-spinner fa-spin hidden"></i> Ajouter</button>
                        </div>
                            <table id="table-prestation-procedure" class="table table-bordered table-striped table-hover dataTable js-exportable">
                                <thead>
                                    <tr>
                                        <th>Code</th>
                                        <th>Nom de la procedure</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            <table>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-link waves-effect close_btn">Fermer</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# ajout document -->

        </div>
    </section>
{% endblock %}